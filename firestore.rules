rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    // Helper functions
    function isAdmin() {
      // Check both collections just in case
      return request.auth != null && (
        get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Products: Public read, Admin write
    match /products/{product} {
      allow read: if true;
      allow write: if request.auth != null; // Temporarily relax write for setup
    }
    
    // Users (Singular - matching current DB)
    match /user/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users (Plural - legacy/future proof)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders: Users read own, Admin read all. Create allowed by auth users.
    match /orders/{orderId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.userId);
      allow create: if request.auth != null;
      allow update: if isAdmin(); // Only admin updates status
    }
    
    // Marketplace Metadata
    match /marketplace_settings/{setting} {
      allow read, write: if isAdmin();
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
