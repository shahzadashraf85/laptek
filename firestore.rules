rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check purely based on Auth UID vs Document ID (for user profiles)
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Check based on 'userId' field in the document data (for orders, posts, etc)
    function isResourceOwner() {
      return request.auth.uid == resource.data.userId;
    }
    
    function isAdmin() {
      // Guard against recursion: only check admin role if authorized
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ============================================
    // USERS COLLECTION (Plural)
    // ============================================
    match /users/{userId} {
      // Simplified read rule to prevent recursion:
      // You can read your own profile OR if you are an admin.
      // Since isAdmin() reads this collection, we must ensure self-read is evaluated first/separately.
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // ============================================
    // USER COLLECTION (Singular - Legacy Fallback)
    // ============================================
    match /user/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // PRODUCTS COLLECTION
    // ============================================
    match /products/{productId} {
      allow read: if true; // Public read
      allow create, update, delete: if true; // TEMPORARY DEBUG: Allow all writes
      
      match /variants/{variantId} {
        allow read: if true;
        allow write: if isAdmin();
      }
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() && (isResourceOwner() || isAdmin());
      }
    }
    
    // ============================================
    // ORDERS & COMMERCE
    // ============================================
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (isResourceOwner() || isAdmin());
      allow create: if isAuthenticated(); 
      allow update: if isAdmin(); // Only admins update status
      
      match /items/{itemId} {
        allow read: if isAuthenticated() && (get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid || isAdmin());
      }
    }
    
    match /invoices/{invoiceId} {
      allow read: if isAuthenticated() && (isResourceOwner() || isAdmin());
      allow write: if isAdmin();
    }
    
    match /promotions/{promoId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /usage/{usageId} {
        allow read, write: if isAdmin();
      }
    }
    
    match /carts/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    match /wishlists/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // SUPPORT & NOTIFICATIONS
    // ============================================
    match /support_conversations/{conversationId} {
      allow read: if isAuthenticated() && (isResourceOwner() || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (isResourceOwner() || isAdmin());
      
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && isResourceOwner();
      allow write: if isAdmin();
      allow update: if isAuthenticated() && isResourceOwner(); // for marking as read
    }
    
    // ============================================
    // SYSTEM & ADMIN
    // ============================================
    match /marketplace_settings/{setting} {
      allow read, write: if isAdmin();
    }
    
    match /sync_logs/{logId} {
        allow read, write: if isAdmin();
    }
    
    match /analytics/{docId} {
        allow read, write: if isAdmin();
    }
    
    match /sales_stats/{docId} {
        allow read, write: if isAdmin();
    }
    
    match /site_settings/{setting} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
